@{
    ViewBag.Title = "Financial";
}

<div class="content animate-panel">
    <div class="row">
        <div class="col-lg-5">
            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Compound Interest Calculator
                </div>
                <div class="panel-body">
                    <form method="post" class="form-horizontal">
						<div class="form-group">
							<label class ="col-sm-4 control-label">Starting Balance</label>
							<div class="col-sm-8">
								<input id="txtprincBalance" name="princBalance" type="text"  class="form-control" /><br />
							</div>
                            
							<label class ="col-sm-4 control-label">Monthly Contribution</label>
							<div class="col-sm-8">
								<input id="txtcontribAmt" name="contribAmt" type="text" class="form-control" /><br />
							</div>

                            <label class="col-sm-4 control-label">Interest Rate</label>
                            <div class="col-sm-8">
                                <input id="txtintRate" name="intRate" type="text" class="form-control" /><br />
                            </div>

                            <label class="col-sm-4 control-label">Compound Interval</label>
                            <div class="col-sm-8">
                                <input id="txtcompoundInterval" name="compoundInterval" type="text" class="form-control"/><br />
                            </div>

                            <label class="col-sm-4 control-label">Years Invested</label>
                            <div class="col-sm-8">
                                <input id="txtinvestmentDuration" name="investmentDuration" type="text" class="form-control" /><br />
                            </div>
                            
                        </div>
                        
                        <input type="submit" value="Calculate"/>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Results
                </div>
                <div class="panel-body">

                    <div id="subscriberCount" style="min-width: 400px; height: 400px;"></div>
                    <script src="https://code.jquery.com/jquery-1.9.1.js" integrity="sha256-e9gNBsAcA0DBuRWbm0oZfbiCyhjLrI6bmqAl5o+ZjUA=" crossorigin="anonymous"></script>
                    <script src="https://code.highcharts.com/highcharts.js"></script>
                    <script src="https://code.highcharts.com/modules/exporting.js"></script>

                    <div id="subscriberCount" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
                    <script>
                        var subCount;
                        $(document).ready(function () {
                            BillingPerformance = new Highcharts.Chart({
                                chart: { renderTo: 'subscriberCount', defaultSeriesType: 'spline', zoomType: 'x', resetZoomButton: { position: { align: 'left', y: -10 } } },
                                credits: { enabled: false },
                                exporting: { enabled: false },
                                title: { text: '' },
                                xAxis: { },
                                yAxis: { min: 0, title: { text: 'Years Invested' } },
                                series: [{
                                    data: [@ViewBag.chartData], name: 'Balance', marker: { symbol: 'circle' }
                                }]
                            });
                        });
                    </script>
                </div>
            </div>
        </div>
    </div>
</div>
